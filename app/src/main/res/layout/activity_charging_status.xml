<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_fill"
    tools:context=".activity.ChargingStatusActivity">

    <Button

        android:layout_width="300dp"
        android:layout_height="35dp"
        android:gravity="center"
        android:text="START JOB"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="2dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/job_list_border"
            android:gravity="center"
            android:layout_marginTop="17dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/jobSection"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="bottom"
                android:paddingLeft="25dp"
                android:paddingTop="30dp"
                android:text="Job Status"
                android:textColor="#9A9EA1"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/jobSectionContent"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:paddingLeft="25dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:text="example example example example example example "
                android:textColor="#BABABB"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/chargingSection"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="25dp"
                android:paddingTop="10dp"
                android:text="Charging"
                android:textColor="#BABABB"
                android:textSize="20dp" />

            <SeekBar
                android:id="@+id/seekBarDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:paddingLeft="25dp"
                android:paddingRight="20dp"
                android:progress="50"
                android:progressDrawable="@drawable/progress"
                android:thumb="@drawable/thumb"></SeekBar>

            <TextView
                android:id="@+id/delieverdSection"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="25dp"
                android:paddingTop="10dp"
                android:text="kwh Delivered"
                android:textColor="#BABABB"
                android:textSize="20dp" />

            <SeekBar
                android:id="@+id/seekBarDelievered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:paddingLeft="25dp"
                android:paddingRight="20dp"
                android:progressDrawable="@drawable/progress"
                android:thumb="@drawable/thumb"></SeekBar>

            <TextView
                android:id="@+id/elapesedSection"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="25dp"
                android:paddingTop="15dp"
                android:text="Elapesed Time"
                android:textColor="#BABABB"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/TimeSection"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="25dp"
                android:paddingTop="15dp"
                android:text="00 : 00 : 00"
                android:textColor="#BABABB"
                android:textSize="23dp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/btnUpadte"
                android:layout_width="300dp"
                android:layout_height="4dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/background_fill"
                android:gravity="center"
                android:text="UPDATE"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <Button
            android:id="@+id/btnStartJob"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/buttonbackground"
            android:gravity="center"
            android:text="START JOB"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

    </FrameLayout>

</LinearLayout>