<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@drawable/job_list_border"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:weightSum="2"
                android:background="#FFFFFF">
                <TextView
                    android:id="@+id/orderId"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:text="Order ID:"
                    android:textColor="#A4A5A8"
                    android:textSize="15dp"
                    android:paddingLeft="15dp"/>

                <TextView
                    android:id="@+id/orderDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="Order Date:"
                    android:textSize="15dp"
                    android:textColor="#A4A5A8" />

            </LinearLayout>

            <TextView
                android:id="@+id/driverNameSection"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingTop="2dp"
                android:text="Driver Name "
                android:textColor="#808186"
                android:textSize="15dp"
                android:paddingLeft="15dp"
                android:background="#FFFFFF"/>

            <TextView
                android:id="@+id/driverName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingTop="5dp"
                android:text="Example driver name "
                android:textColor="#BBBABB"
                android:paddingLeft="15dp"
                android:background="#FFFFFF"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/startLocationSection"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingTop="15dp"
                android:text="Start Location"
                android:textColor="#808186"
                android:textSize="15dp"
                android:paddingLeft="15dp"
                android:background="#FFFFFF"/>

            <TextView
                android:id="@+id/startLocation"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingTop="5dp"
                android:text="Location details"
                android:textColor="#BBBABB"
                android:textSize="15dp"
                android:paddingLeft="15dp"
                android:background="#FFFFFF"/>

            <TextView
                android:id="@+id/endLocationSection"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingTop="15dp"
                android:text="End Location"
                android:textColor="#808186"
                android:textSize="15dp"
                android:paddingLeft="15dp"
                android:background="#FFFFFF"/>

            <TextView
                android:id="@+id/endLocation"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingTop="5dp"
                android:text="Location details"
                android:textColor="#BBBABB"
                android:textSize="15dp"
                android:paddingLeft="15dp"
                android:background="#FFFFFF"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:weightSum="2"
                android:background="#FFFEFF">

                <Button
                    android:id="@+id/jobStatus"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:text="JOB STATUS"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textColor="#FEC3D2"
                    android:textSize="15dp"
                    android:paddingLeft="15dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/buttonbackground"/>

                <Button
                    android:id="@+id/navigator"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="NAVIGATOR"
                    android:textColor="#FEC3D2"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    android:gravity="right|center_vertical"
                    android:textStyle="bold"
                    android:paddingLeft="8dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/buttonbackground"/>

            </LinearLayout>
        </LinearLayout>
</LinearLayout>
